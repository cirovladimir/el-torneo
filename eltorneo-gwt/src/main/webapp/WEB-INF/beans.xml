<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jaxrs="http://cxf.apache.org/jaxrs"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd
http://cxf.apache.org/jaxrs
http://cxf.apache.org/schemas/jaxrs.xsd">

	<import resource="classpath:META-INF/cxf/cxf.xml" />
	<import resource="classpath:META-INF/cxf/cxf-servlet.xml" />

	<jaxrs:server id="api-rest" address="/rest">
		<jaxrs:serviceBeans>
			<ref bean="rest-modulos" />
			<ref bean="rest-equipos" />
		</jaxrs:serviceBeans>
	</jaxrs:server>

	<bean id="rest-modulos" class="mx.com.apestudio.gwt.eltorneo.server.api.rest.ModulosResource" />
	<bean id="rest-equipos" class="mx.com.apestudio.gwt.eltorneo.server.api.rest.EquiposResource" />
</beans>